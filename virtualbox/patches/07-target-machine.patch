+      if [ "$TARGET_MACHINE" = "amd64" ]; then
         [ -z "$CC32"  ] && CC32="$CC -m32"
         [ -z "$CXX32" ] && CXX32="$CXX -m32"
       else
         [ -z "$CC32"  ] && CC32="$CC"
         [ -z "$CXX32" ] && CXX32="$CXX"
       fi
