     # Currently there are no amd64 kBuild bins. So use the x86 variant in any case.
     KBUILDDIR_BIN="$KBUILDDIR/bin/$OS.x86"
     echo "PATH_KBUILD=\"`cd $KBUILDDIR ; pwd`\"" >> $ENV
@@ -2010,8 +2010,8 @@
     ;;
     *) eval "wineprefixcreate() { true ; }" ;; # now created automatically
   esac
