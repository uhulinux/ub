-      if [ "$OS" = "solaris" -a "$BUILD_MACHINE" = "amd64" ]; then
+      if [ "$OS" = "solaris" -a "$TARGET_MACHINE" = "amd64" ]; then
         [ "$CC" = "gcc" ] && CC="gcc -m64"
         [ "$CXX" = "g++" ] && CXX="g++ -m64"
       fi
@@ -1770,8 +1770,8 @@
 check_kbuild()
 {
   test_header kBuild
