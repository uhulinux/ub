+  DEVDIR_BIN="$DEVDIR/$OS.$TARGET_MACHINE/bin"
+  log_success "Determined build machine: $OS.$TARGET_MACHINE, target machine: $OS.$TARGET_MACHINE"
 
   echo "BUILD_PLATFORM=\"$OS\"" >> $ENV
   echo "export BUILD_PLATFORM" >> $ENV
