+  echo "WINEPREFIX=\"${ODIR}wine.$TARGET_MACHINE\"" >> $ENV
   echo "export WINEPREFIX" >> $ENV
   rm -rf $WINEPREFIX
   mkdir -p $WINEPREFIX
@@ -2775,7 +2775,7 @@
     check_libcap
   fi
   check_compiler_h
