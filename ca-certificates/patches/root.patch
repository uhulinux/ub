diff -Naur orig/usr/sbin/update-ca-certificates patched/usr/sbin/update-ca-certificates
--- orig/usr/sbin/update-ca-certificates	2016-01-04 18:31:00.000000000 +0100
+++ patched/usr/sbin/update-ca-certificates	2016-01-06 03:00:52.554741551 +0100
@@ -30,6 +30,8 @@
 CERTBUNDLE=ca-certificates.crt
 ETCCERTSDIR=/etc/ssl/certs
 HOOKSDIR=/etc/ca-certificates/update.d
