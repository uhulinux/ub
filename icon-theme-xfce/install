		ln -s /usr/share/icons/Tango/$i/mimetypes/x-office-document-template.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-office.png
		ln -s /usr/share/icons/Tango/$i/mimetypes/x-office-address-book.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/stock-book.png
		ln -s /usr/share/icons/Tango/$i/mimetypes/x-office-document.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-office-wordprocessor.png
		ln -s /usr/share/icons/Tango/$i/mimetypes/x-office-presentation.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-office-presentation.png
		ln -s /usr/share/icons/Tango/$i/mimetypes/x-office-spreadsheet.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-office-spreadsheet.png
