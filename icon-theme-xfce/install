		ln -s /usr/share/icons/Tango/$i/categories/applications-graphics.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-gfx.png
		ln -s /usr/share/icons/Tango/$i/categories/applications-internet.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/stock-panel-internet.png
		ln -s /usr/share/icons/Tango/$i/categories/applications-multimedia.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-media.png
		ln -s /usr/share/icons/Tango/$i/mimetypes/x-office-address-book.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-documentation.png
		ln -s /usr/share/icons/Tango/$i/categories/applications-system.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/package_edutainment.png
		ln -s /usr/share/icons/Tango/$i/categories/preferences-desktop.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-configuration.png
		ln -s /usr/share/icons/Tango/$i/apps/gnome-calculator.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-accessories.png
		ln -s /usr/share/icons/Tango/$i/devices/computer.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-computer.png
		ln -s /usr/share/icons/Tango/$i/apps/system-file-manager.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-filemanager.png
		ln -s /usr/share/icons/Tango/$i/apps/accessories-text-editor.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-notepad.png
		ln -s /usr/share/icons/Tango/$i/places/desktop.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-network.png
		ln -s /usr/share/icons/Tango/$i/status/network-error.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-network-firewall.png
		ln -s /usr/share/icons/Tango/$i/status/network-transmit.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-network-system.png
