		ln -s /usr/share/icons/Tango/$i/actions/list-remove.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/edu_miscellaneous.png
		ln -s /usr/share/icons/Tango/$i/emblems/emblem-system.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/edu_science.png
		ln -s /usr/share/icons/Tango/$i/mimetypes/x-office-address-book.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-logbook.png
		if [ $theme = "Rodent" ]
		then
			ln -s /usr/share/icons/Tango/$i/devices/input-gaming.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/package_games.png
		fi
	done
done
