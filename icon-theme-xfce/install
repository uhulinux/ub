		ln -s /usr/share/icons/Tango/$i/apps/utilities-system-monitor.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-monitor.png
		ln -s /usr/share/icons/Tango/$i/apps/accessories-character-map.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-launcher.png
		ln -s /usr/share/icons/Tango/$i/apps/accessories-calculator.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-calculator.png
		ln -s /usr/share/icons/Tango/$i/mimetypes/x-office-calendar.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-date.png
