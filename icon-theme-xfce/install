		ln -s /usr/share/icons/Tango/$i/apps/internet-web-browser.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-web-browser.png
		ln -s /usr/share/icons/Tango/$i/actions/go-jump.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-update.png
		ln -s /usr/share/icons/Tango/$i/apps/internet-mail.png "$UB_INSTALLDIR"/usr/share/icons/$theme/$i/categories/icon-email.png
